# this is the configuration file related with Caetra's {{shield_name}} Shield
# add here all the user configurable parameters to tune the
# behaviour of the shield

# Name of the Caetra Shield and generic config values
# case sensitive must match with SHIELD_NAME on python side
[{{shield_name}}]

# if this shield is enable (if false will override the main config)
enable = {{shield_enable}} 

# a description that will logged
description = {{shield_description}}

{% if shield_feature is defined %}
# to configure special features
[{{shield_name}}.features]

# the feature variable 
{{shield_feature}} = true
{% endif %}

{% if canarytoken_sender is defined %}
# this will override the general senders configuration
[usb.senders.canarytokens]
enable= {{canarytoken_sender}} 
token = "{{canarytoken}}"
{% endif %}

{% if telegram_sender is defined %}
[usb.senders.telegram]
enable = {{telegram_sender}}
chat_id = {{telegram_chat_id}} 
bot_api_key = "{{telegram_bot_api_key}}"
{% endif %}
